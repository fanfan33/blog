<% include adminHeader.ejs %>

    <script>
        $('.navbar-nav>li').removeClass();
        $('.navbar-nav>li').eq(3).addClass('active');
    </script>
    <div class="jumbotron">
        <h1>新增内容</h1>
        <p>...</p>
    </div>
    <form class="form-horizontal" method="post" action="/admin/content/add">
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">分类：</label>
            <div class="col-sm-9">
                <select class="form-control" name="con[cate]">
                    <% cates.forEach(function(cate){ %>
                        <option value="<%= cate._id %>"><%= cate.name %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">标题：</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="con[title]" id="title" placeholder="请输入title">
            </div>
        </div>
        <div class="form-group">
            <label for="desc" class="col-sm-2 control-label">简介：</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="con[desc]" id="desc" placeholder="请输入desc">
            </div>
        </div>
        <div class="form-group">
            <label for="content" class="col-sm-2 control-label">内容：</label>
            <div class="col-sm-9">
                <textarea rows="3" class="form-control" name="con[content]" id="content" placeholder="请输入content"></textarea>
                
            </div>
        </div>
        <div class="checkbox btnCenter">
            <label>
                <input type="checkbox"> Check me out
            </label>
        </div>
        <div class="btnCenter">
            <input type="submit" class="submit btn btn-success">Submit</input>
        </div>
        
    </form>
    
    <% include ../include/footer.ejs %>